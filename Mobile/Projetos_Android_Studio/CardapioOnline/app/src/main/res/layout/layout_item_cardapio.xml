<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_Produtos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardapio_Produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calabresa Acebolada "
                android:textColor="@color/bootstrap_gray" />

            <TextView
                android:id="@+id/cardapio_ComplementoProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Acompanha pÃ£o)"
                android:textColor="@color/bootstrap_gray"
                android:textSize="10dp"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/cardapio_ValorMeia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/bootstrap_gray" />

        <TextView
            android:id="@+id/cardapio_ValorInteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30,00"
            android:textColor="@color/bootstrap_gray" />
    </LinearLayout>

    <View
        style="@style/ConfiguracaoViewMenus"
        android:focusable="false"
        android:layout_marginTop="5dp" />

</LinearLayout>